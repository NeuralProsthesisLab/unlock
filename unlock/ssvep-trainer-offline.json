{
    "ssvep_trainer" : {
        "main" : true,
        "deps" : {
            "stimuli" : "single_dynamic_ssvep",
            "decoder" : "vep_trial_logger"
        },
        "args" : {
            "frequencies" : [4.0, 5.0, 6.0, 7.5, 10.0, 12.0, 15.0],
            "n_trials" : 35,
            "trial_sequence" : "random"
        }
    },
    
    "signal" : {
        "singleton" : 0,
        "name" : "random"
    },

    "window" : {
       "singleton" : 1,
       "name" : "pyglet",
        "args" : {
            "fullscreen" : true,
            "fps" : false,
            "vsync" : false
        }
    },

    "vep_trial_logger" : {
        "deps" : {
            "buffering_decoder" : "fixed_time_buffering_decoder"
        },
        "args" : {
            "label" : "ssvep"
        }
    },

    "fixed_time_buffering_decoder" : {
        "args" : {
            "window_length" : 768
        }
    },
    
    "absolute_threshold_decoder" : {
        "args" : {
            "threshold" : 0,
            "reduction_fn" : "np.mean"
        }
    },

    "no_stimulation" : {
    },

    "checkerboard_properties" : {
        "args" : {
            "width" : 180,
            "height" : 180,
            "x_tiles" : 1,
            "y_tiles" : 1,
            "x_ratio" : 1,
            "y_ratio" : 1,
            "color1" : [255, 255, 255],
            "color2" : [0, 0, 0]
        }
    },

    "single_dynamic_ssvep" : {
        "deps" : {
            "cb_properties" : "checkerboard_properties"
        },
        "args" : {
            "stimulus" : "time",
            "frequency" : 10.0,
            "trial_duration" : 5.0,
            "rest_duration" : 1.0
        }
    },

    "logger": {
        "singleton" : 0,
        "name" : "logging",
        "args" : {
            "version": 1,
            "disable_existing_loggers": false,
            "formatters": {
                "simple": {
                    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
                }
            },
     
            "handlers": {
                "console": {
                    "class": "logging.StreamHandler",
                    "level": "DEBUG",
                    "formatter": "simple",
                    "stream": "ext://sys.stdout"
                },
                
                "file_handler": {
                    "class": "logging.handlers.RotatingFileHandler",
                    "formatter": "simple",
                    "filename": "unlock.log",
                    "maxBytes": 10485760,
                    "backupCount": 20,
                    "encoding": "utf8"
                }
            },
        
            "root": {
                "level": "INFO",
                "handlers": ["console", "file_handler"]
            }
        }
    }
}
