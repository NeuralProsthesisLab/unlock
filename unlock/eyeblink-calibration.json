{
    "eyeblink_calibration" : {
        "main" : true,
        "deps" : {
            "stimulation": "no_stimulation",
            "decoder": "gaze_detector"
        }
    },
    
    "signal" : {
        "singleton" : 0,
        "name" : "lsl",
        "args" : {
            "stream_name" : "NIC",
            "stream_type" : "EEG"
        }
    },

    "window" : {
       "singleton" : 1,
       "name" : "pyglet",
        "args" : {
            "fullscreen" : true,
            "fps" : false,
            "vsync" : true
        }
    },

    "no_stimulation" : {
    },

    "gaze_detector" : {
    },

    "logger": {
        "singleton" : 0,
        "name" : "logging",
        "args" : {
            "version": 1,
            "disable_existing_loggers": false,
            "formatters": {
                "simple": {
                    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
                }
            },
     
            "handlers": {
                "console": {
                    "class": "logging.StreamHandler",
                    "level": "DEBUG",
                    "formatter": "simple",
                    "stream": "ext://sys.stdout"
                },
                
                "file_handler": {
                    "class": "logging.handlers.RotatingFileHandler",
                    "formatter": "simple",
                    "filename": "unlock.log",
                    "maxBytes": 10485760,
                    "backupCount": 20,
                    "encoding": "utf8"
                }
            },
        
            "root": {
                "level": "INFO",
                "handlers": ["console", "file_handler"]
            }
        }
    }
}
