{
    "window" : {
       "singleton" : 1,
       "name" : "pyglet",
        "args" : {
            "fullscreen" : true,
            "fps" : false,
            "vsync" : true
        }
    },

     "signal" : {
        "singleton" : 0,
        "name" : "lsl",
        "args" : {
            "stream_name" : "NIC",
            "stream_type" : "EEG"
        }
    },

    "no_stimulation" : {
    },

    "quad_ssvep" : {
        "deps" : {
            "cb_properties" : "checkerboard_properties"
        },
        "args" : {
            "stimulus" : "time",
            "stimuli_duration" : 1.5,
            "rest_duration" : 0.5,
            "frequencies" : [8.0, 10.0, 12.0, 15.0]
        }
    },

    "checkerboard_properties" : {
        "args" : {
            "width" : 180,
            "height" : 180,
            "x_tiles" : 1,
            "y_tiles" : 1,
            "x_ratio" : 1,
            "y_ratio" : 1,
            "color1" : [255, 255, 255],
            "color2" : [0, 0, 0]
        }
    },

    "harmonic_sum" : {
        "deps" : {
            "buffering_decoder" : "fixed_time_buffering_decoder",
            "threshold_decoder" : "absolute_threshold_decoder",
            "selector" : "eyeblink_detector"
        },
        
        "args" : {
           "fs" : 500,
           "n_electrodes" : 4,
           "targets" : [8.0, 10.0, 12.0, 15.0],
           "target_window" : 0.1,
           "nfft" : 2048,
           "n_harmonics" : 2,
           "selected_channels" : [1]
        }
    },

    "fixed_time_buffering_decoder" : {
        "args" : {
            "window_length" : 750
        }
    },

    "absolute_threshold_decoder" : {
        "args" : {
            "threshold" : 1200,
            "reduction_fn" : "np.max"
        }
    },

    "eyeblink_detector" : {
        "args" : {
            "eog_channels" : [4],
            "strategy" : "count",
            "rms_threshold" : 20
        }
    },

    "dashboard" : {
        "main" : true,
        "deps" : {
            "stimulation" : "quad_ssvep",
            "decoder" : "harmonic_sum",
            "controllers" : ["gridspeak",
                             "time_scope",
                             "frequency_scope",
                             "gridcursor",
                             "laser_cannon"]
        }
    },

    "gridspeak" : {
        "deps" : {
            "stimulation" : "quad_ssvep",
            "decoder" : "harmonic_sum"
        }
    },

    "gridcursor" : {
        "deps" : {
            "stimulation" : "quad_ssvep",
            "decoder" : "harmonic_sum"
        }
    },

    "laser_cannon" : {
        "deps" : {
            "stimulation" : "quad_ssvep",
            "decoder" : "harmonic_sum"
        },
        "args" : {
            "arduino_port" : "COM11"
        }
    },

    "time_scope" : {
        "deps" : {
            "stimulation" : "no_stimulation"
        },
        "args" : {
            "channels" : 8,
            "fs" : 500,
            "duration" : 5,
            "offline_data" : false
        }
    },

    "frequency_scope" : {
        "deps" : {
            "stimulation" : "quad_ssvep"
        },
        "args" : {
            "channels" : 8,
            "fs" : 500,
            "duration" : 3,
            "nfft" : 2048,
            "freq_range" : [6.0, 17.0],
            "display_channels" : [1],
            "labels" : [6.0, 7.0, 8.0, 9.0, 10.0, 11.0, 12.0, 13.0, 14.0, 15.0, 16.0, 17.0],
            "margin" : 0.1,
            "offline_data" : false
        }
    },

    "logger": {
        "singleton" : 0,
        "name" : "logging",
        "args" : {
            "version": 1,
            "disable_existing_loggers": false,
            "formatters": {
                "simple": {
                    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
                }
            },
     
            "handlers": {
                "console": {
                    "class": "logging.StreamHandler",
                    "level": "DEBUG",
                    "formatter": "simple",
                    "stream": "ext://sys.stdout"
                },
                
                "file_handler": {
                    "class": "logging.handlers.RotatingFileHandler",
                    "formatter": "simple",
                    "filename": "unlock.log",
                    "maxBytes": 10485760,
                    "backupCount": 20,
                    "encoding": "utf8"
                }
            },
        
            "root": {
                "level": "INFO",
                "handlers": ["console", "file_handler"]
            }
        }
    }
}
