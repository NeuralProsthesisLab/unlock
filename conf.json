    // The Logging-Config object determines the configuration of the logging    
    // System.  It follows the standard Python JSON logging config; see
    // http://docs.python.org/2/howto/logging-cookbook.html for more details.
    "Logging-Config": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "simple": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
            }
        },
     
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "simple",
                "stream": "ext://sys.stdout"
            },
            
            "file_handler": {
                "class": "logging.handlers.RotatingFileHandler",
                "formatter": "simple",
                "filename": "unlock.log",
                "maxBytes": "10485760",
                "backupCount": "20",
                "encoding": "utf8"
            }
        },
        
        "root": {
            "level": "INFO",
            "handlers": ["console", "file_handler"]
        }
    }

    // Uncomment the following line if you want to change the location of the app-ctx.
    //    "Application-Context" : "/Users/jpercent/unlock/app-ctx.xml",
    // See the developers guide for more information on application context configuration.
    
